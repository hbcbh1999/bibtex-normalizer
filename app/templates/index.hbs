<div class="app-index container" ondrop={{action "drop"}}>
  <div class="header col-md-6">
    <h1 class="slogan text-center">Normalize your .bib</h1>
    <div class="features row">
      <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Remove unnecessary fields</div>
      <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Add required fields</div>
      <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Check formatting</div>
      <div class="feature text-center"><i class="fa fa-check" aria-hidden="true"></i> Auto-formatting basic fields</div>
    </div>
  </div>
  <div class="body col-md-6">
    <div class="open-file text-center">
      <div class="btn btn-primary" onclick={{action "choose"}}>Choose a bibtex file</div>
    </div>
    <div class="separator text-center">
      <span>-- or --</span>
    </div>
    <div class="drop-file text-center">
      <div class="drop-file-area" onclick={{action "choose"}}><b>Drag your file here</b></div>
      <input type="file" name="file" value=""  class="file-input hidden" onchange={{action "select"}} multiple="false" accept=".bib">
    </div>
  </div>
</div>
