<div class="app-editor container">
  {{textarea value=model.source class="form-control" rows="25" placeholder="Put your bibtex content here" autofocus=true}}
  <div class="options">
    <button type="button" class="btn btn-default" name="button" {{action "clear"}}><i class="fa fa-eraser"></i>Clear</button>
    <button type="button" class="btn btn-primary" name="button" {{action "normalize"}}><i class="fa fa-cog"></i>Normalize</button>
  </div>
</div>
