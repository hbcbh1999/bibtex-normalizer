<div class="app-bibtex">
  <div class="sub-header">
    <div class="options">
      {{#link-to 'index' class="option text-center logo"}}
        <i class="fa fa-home"></i><span>Home</span>
      {{/link-to}}

      {{#link-to "editor" class="option text-center"}}
        <i class="fa fa-pencil" aria-hidden="true"></i><span>Edit</span>
      {{/link-to}}

      <a class="option copy text-center" {{action "copyToClipboard"}}>
        <i class="fa fa-clipboard" aria-hidden="true"></i><span>Copy</span>
      </a>
      <a class="option text-center" {{action "save"}}>
        <i class="fa fa-download" aria-hidden="true"></i><span>Download</span>
      </a>
    </div>
  </div>
  <div class="body container">
    {{#bibtex-panel model=model}}{{model.bibtex}}{{/bibtex-panel}}
  </div>
</div>
